@model prjLegados.Models.ClsContainer
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Subida de Archivos</h1>
<div class="Control">
    <table>
        <tr>
            <td>Agrupación</td>
            <td>
                <select class="form-control" id="cbxContainerUpload" name="cbxContainerUpload">
                    <option>
                        Seleccione el Contenedor
                    </option>
                    @foreach (var item in Model.lstContainers)
                    {
                        <option>
                            @Html.DisplayFor(modelItem => item.fntFullNameStr)
                        </option>
                    }
                </select>
            </td>
            <td>Aplicación</td>
            <td>
                <select class="form-control" id="cbxAplicationUpload">
                    <option>
                        Seleccione aplicación
                    </option>
                    @foreach (var item in Model.usrUser.fntAplicationsLst)
                    {
                        <option>
                            @Html.DisplayFor(modelItem => item)
                        </option>
                    }
                </select>
            </td>
            <td>Módulo</td>
            <td>
                <input type="text" name="txtNombreModulo" id="txtNombreModulo" />
            </td>
        </tr>
    </table>

</div>
<div class="Control">
    <label class="btn btn-default btn-file">
        Examinar <input type="file" style="display: none;" accept=".pdf" required name="fileInput[]" id="fileInput" multiple />
    </label>
    <label id="messageFile">La cantidad de archivos que puede subir son 10</label>
</div>
<div class="Control">
    <a href="#" class="btn btn-info" id="DeleteGrid">Borrar</a>
    <a href="#" class="btn btn-info" id="DeleteRow">Eliminar Fila</a>
</div>
<div>
    <table id="rowed5"></table>

</div>

<div id="mensaje"></div>

<div class="Control">
    <a href="#" class="btn btn-info" id="btnUploadFiles">Subir Archivos</a>

</div>
<div id="wait" style="display:none"><img src='~/Imagens/ajax-loader-gif-5.gif' width="64" height="64" /><br>Por favor espere mientras sus archivos se estan cargando..</div>



@section scripts{
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.10.0.js"></script>
    <script src="~/Scripts/i18n/grid.locale-en.js"></script>
    <script src="~/Scripts/jquery.jqGrid.min.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script>



    </script>
}

