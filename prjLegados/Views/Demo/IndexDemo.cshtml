@model IEnumerable<prjLegados.Data.Structure.Container>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexDemo</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/Site.css">
</head>
<body>
    <div class="Control">
        <h1>Compañia Maresa</h1>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group  Control">
                <label for="sel1">Seleccione Contenedor</label>
                <div class="Control">
                    <select class="form-control" id="sel1">
                        @foreach (var item in Model)
                        {
                            <option>
                                @Html.DisplayFor(modelItem => item.fntNameStr)
                            </option>
                        }
                        <option>Contenedor 1</option>
                        <option>Contenedor 2</option>
                        <option>Contenedor 3</option>
                        <option>Contenedor 4</option>
                    </select>
                </div>
                <div class="Control">
                    <button class="btn-primary">Nuevo Contenedor</button>
                </div>
            </div>
            <div class="Control">
                <div class="checkbox Control">
                    <label><input type="checkbox" value="">Aplicacion 1</label>
                </div>
                <div class="checkbox Control">
                    <label><input type="checkbox" value="">Aplicacion 2</label>
                </div>
                <div class="checkbox disabled Control">
                    <label><input type="checkbox" value="" disabled>Aplicacion 3</label>
                </div>
            </div>
            <div class="form-group Control">
                <label for="buscar">Buscar:</label>
                <div class="Control">
                    <input type="text" class="form-control" id="buscar">
                </div>
                <div class="Control">
                    <button class="btn-primary">Buscar</button>
                </div>
            </div>

        </div>
        <div class="col-sm-8">
            <div id="NombreDer">
                <div class="Control">
                    <label>Contenedor 1</label>
                    <button type="button" class="btn">Borrar</button>
                    <button type="button" class="btn">Upload</button>
                </div>
            </div>
            <div class="Control">
                <table class="table">
                    <tr>
                        <td>Aplicacion</td>
                        <td>Archivo</td>
                        <td>Tipo</td>
                    </tr>
                </table>
            </div>

        </div>
    </div>

</body>
</html>
